---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import SectionHeading from '../components/ui/SectionHeading.astro';
import { socials, contactEmail, companyAddress } from '../data/socials';
---

<BaseLayout
  title="Contact â€” Pixfork Games"
  description="Get in touch with Pixfork Games. Business inquiries, press requests, and general contact."
>
  <Navbar />

  <main id="main-content" class="pt-32">
    <section class="py-16 md:py-24">
      <div class="max-w-3xl mx-auto px-6 md:px-12">
        <SectionHeading
          title="Contact"
          subtitle="Got a question, business inquiry, or just want to say hi? Reach out."
          as="h1"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Contact info -->
          <div class="space-y-8">
            <div>
              <h3 class="font-heading text-sm text-text-primary uppercase tracking-wider mb-3">
                Email
              </h3>
              <a
                href={`mailto:${contactEmail}`}
                class="text-accent-primary hover:text-accent-primary-muted transition-colors text-lg"
              >
                {contactEmail}
              </a>
            </div>

            <div>
              <h3 class="font-heading text-sm text-text-primary uppercase tracking-wider mb-3">
                Location
              </h3>
              <p class="text-text-secondary">{companyAddress}</p>
            </div>

            <div>
              <h3 class="font-heading text-sm text-text-primary uppercase tracking-wider mb-3">
                Social Media
              </h3>
              <div class="flex flex-col gap-2">
                {socials.map((social) => (
                  <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-accent-primary transition-colors text-sm"
                  >
                    {social.name} &rarr;
                  </a>
                ))}
              </div>
            </div>
          </div>

          <!-- Terminal-style contact form -->
          <div class="bg-bg-surface border border-white/5 rounded-sm p-6">
            <div class="flex items-center gap-2 mb-4 pb-3 border-b border-white/5">
              <div class="w-3 h-3 rounded-full bg-accent-secondary/60"></div>
              <div class="w-3 h-3 rounded-full bg-accent-tertiary/60"></div>
              <div class="w-3 h-3 rounded-full bg-accent-primary/60"></div>
              <span class="text-text-muted text-xs font-mono ml-2">contact.sh</span>
            </div>

            <form
              action={`mailto:${contactEmail}`}
              method="POST"
              enctype="text/plain"
              class="space-y-4"
            >
              <div>
                <label class="block text-xs text-text-muted font-mono mb-1">
                  <span class="text-accent-primary">$</span> name
                </label>
                <input
                  type="text"
                  name="name"
                  required
                  class="w-full bg-bg-deep border border-white/10 rounded-sm px-4 py-2 text-text-primary font-mono text-sm placeholder:text-text-muted/40 focus-visible:border-accent-primary focus-visible:ring-2 focus-visible:ring-accent-primary/50 focus-visible:outline-none transition-colors"
                  placeholder="Your name"
                />
              </div>

              <div>
                <label class="block text-xs text-text-muted font-mono mb-1">
                  <span class="text-accent-primary">$</span> email
                </label>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full bg-bg-deep border border-white/10 rounded-sm px-4 py-2 text-text-primary font-mono text-sm placeholder:text-text-muted/40 focus-visible:border-accent-primary focus-visible:ring-2 focus-visible:ring-accent-primary/50 focus-visible:outline-none transition-colors"
                  placeholder="your@email.com"
                />
              </div>

              <div>
                <label class="block text-xs text-text-muted font-mono mb-1">
                  <span class="text-accent-primary">$</span> subject
                </label>
                <select
                  name="subject"
                  class="w-full bg-bg-deep border border-white/10 rounded-sm px-4 py-2 text-text-primary font-mono text-sm focus-visible:border-accent-primary focus-visible:ring-2 focus-visible:ring-accent-primary/50 focus-visible:outline-none transition-colors"
                >
                  <option value="general">General Inquiry</option>
                  <option value="business">Business / Partnership</option>
                  <option value="press">Press / Media</option>
                  <option value="support">Game Support</option>
                </select>
              </div>

              <div>
                <label class="block text-xs text-text-muted font-mono mb-1">
                  <span class="text-accent-primary">$</span> message
                </label>
                <textarea
                  name="message"
                  rows="5"
                  required
                  class="w-full bg-bg-deep border border-white/10 rounded-sm px-4 py-2 text-text-primary font-mono text-sm placeholder:text-text-muted/40 focus-visible:border-accent-primary focus-visible:ring-2 focus-visible:ring-accent-primary/50 focus-visible:outline-none transition-colors resize-none"
                  placeholder="Type your message..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="pixel-border px-6 py-3 font-heading text-sm text-accent-primary uppercase tracking-wider w-full"
              >
                <span class="text-accent-primary">$</span> send_message
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
