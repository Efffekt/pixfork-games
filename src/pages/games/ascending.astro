---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import PixelParticles from '../../components/effects/PixelParticles.tsx';
import Badge from '../../components/ui/Badge.astro';
import { Icon } from 'astro-icon/components';
import { games } from '../../data/games';

const game = games.find((g) => g.slug === 'ascending')!;
const iconMap: Record<string, string> = {
  Waves: 'lucide:waves',
  Fish: 'lucide:fish',
  Sparkles: 'lucide:sparkles',
};
---

<BaseLayout
  title="Ascending — A Globsters Story — Pixfork Games"
  description={game.description}
>
  <Navbar />

  <main id="main-content">
    <!-- Ocean Hero -->
    <section class="relative min-h-screen flex items-center overflow-hidden">
      <!-- Ocean gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-bg-surface via-bg-deep to-bg-deep" aria-hidden="true"></div>

      <!-- Bubble-like particles rising upward -->
      <PixelParticles
        client:visible
        density={30}
        colors={['#0077B6', '#00B4D8', '#90E0EF', '#0077B644']}
      />

      <div class="relative z-10 max-w-7xl mx-auto px-6 md:px-12 pt-32 pb-24 w-full">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Game info -->
          <div class="space-y-8">
            <div>
              <Badge color="var(--color-game-ascending)">Available Now</Badge>

              <h1
                class="font-heading text-2xl md:text-3xl uppercase tracking-wider leading-relaxed mt-4 mb-6"
                style="color: var(--color-game-ascending); text-shadow: 0 0 10px #0077B666, 0 0 20px #0077B633;"
              >
                Ascending
              </h1>
              <p class="font-heading text-sm text-game-ascending/60 uppercase tracking-widest mb-6">
                A Globsters Story
              </p>

              <p class="text-text-secondary text-xl leading-relaxed">
                {game.description}
              </p>
            </div>

            <!-- Genre badges -->
            <div class="flex flex-wrap gap-2">
              {game.genre.map((g) => (
                <Badge color="var(--color-game-ascending)">{g}</Badge>
              ))}
            </div>

            <!-- Download -->
            <div class="flex flex-wrap gap-4">
              {game.storeLinks.appStore && (
                <a
                  href={game.storeLinks.appStore}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-bg-surface border-2 border-game-ascending text-game-ascending font-heading text-sm uppercase tracking-wider hover:bg-game-ascending hover:text-bg-deep transition-all shadow-[0_0_10px_#0077B633] hover:shadow-[0_0_20px_#0077B666]"
                >
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
                  App Store
                </a>
              )}
            </div>
          </div>

          <!-- Box art -->
          <div class="relative flex justify-center">
            <div class="relative w-64 aspect-[3/4] rounded-sm overflow-hidden shadow-[0_0_30px_#0077B622]">
              <img
                src="/images/games/ascending/box-art.png"
                alt="Ascending — A Globsters Story"
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    {game.features && (
      <section class="py-24 md:py-32">
        <div class="max-w-5xl mx-auto px-6 md:px-12">
          <h2 class="font-heading text-lg text-text-primary uppercase tracking-wider text-center mb-16" style="text-shadow: 0 0 8px #0077B644;">
            Dive Deep
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {game.features.map((feature) => (
              <div class="text-center bg-bg-surface border border-white/5 rounded-sm p-8 hover:border-game-ascending/30 transition-all">
                <div class="w-12 h-12 mx-auto bg-bg-elevated rounded-sm flex items-center justify-center mb-4">
                  <Icon name={iconMap[feature.icon] || 'lucide:circle'} class="w-6 h-6 text-game-ascending" />
                </div>
                <h3 class="font-heading text-sm text-text-primary uppercase tracking-wider mb-3">{feature.title}</h3>
                <p class="text-text-secondary text-sm leading-relaxed">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Lore Video -->
    <section class="py-24 md:py-32 bg-bg-surface/50">
      <div class="max-w-4xl mx-auto px-6 md:px-12">
        <h2 class="font-heading text-lg text-text-primary uppercase tracking-wider text-center mb-16" style="text-shadow: 0 0 8px #0077B644;">
          The Lore
        </h2>

        <div class="relative aspect-video rounded-sm overflow-hidden bg-bg-elevated">
          <iframe
            class="absolute inset-0 w-full h-full"
            src="https://www.youtube.com/embed/YngqoNH7dCg"
            title="Globsters Lore Animatic — English"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>
        <p class="font-heading text-sm text-game-ascending/60 uppercase tracking-wider mt-3 text-center">
          Globsters Lore Animatic
        </p>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
