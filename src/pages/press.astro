---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import SectionHeading from '../components/ui/SectionHeading.astro';
import { games } from '../data/games';
import { contactEmail, companyAddress } from '../data/socials';

---

<BaseLayout
  title="Press Kit — Pixfork Games"
  description="Press kit and media resources for Pixfork Games. Download logos, screenshots, and learn about our games."
>
  <Navbar />

  <main id="main-content" class="pt-32">
    <section class="py-16 md:py-24">
      <div class="max-w-5xl mx-auto px-6 md:px-12">
        <SectionHeading
          title="Press Kit"
          subtitle="Everything you need to write about Pixfork Games."
          as="h1"
        />

        <!-- Fact Sheet -->
        <div class="bg-bg-surface border border-white/5 rounded-sm p-8 md:p-12 mb-16">
          <h2 class="font-heading text-xs text-text-primary uppercase tracking-wider mb-8">
            Fact Sheet
          </h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Company</dt>
              <dd class="text-text-primary">Pixfork Games AS</dd>
            </div>
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Founded</dt>
              <dd class="text-text-primary">2022</dd>
            </div>
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Location</dt>
              <dd class="text-text-primary">{companyAddress}</dd>
            </div>
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Team Size</dt>
              <dd class="text-text-primary">4 people</dd>
            </div>
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Press Contact</dt>
              <dd>
                <a href={`mailto:${contactEmail}`} class="text-accent-primary hover:text-accent-primary-muted transition-colors">
                  {contactEmail}
                </a>
              </dd>
            </div>
            <div>
              <dt class="text-text-muted text-xs font-mono uppercase mb-1">Website</dt>
              <dd>
                <a href="https://pixfork.com" class="text-accent-primary hover:text-accent-primary-muted transition-colors" target="_blank" rel="noopener noreferrer">
                  pixfork.com
                </a>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Logo downloads -->
        <div class="mb-16">
          <h2 class="font-heading text-xs text-text-primary uppercase tracking-wider mb-8">
            Logo &amp; Branding
          </h2>

          <!-- Horizontal -->
          <h3 class="font-mono text-[10px] text-text-muted uppercase tracking-wider mb-4">Horizontal</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-16 flex items-center justify-center mb-4 bg-bg-deep rounded-sm p-3">
                <img src="/images/press-kit/png/horizontal/color.png" alt="Pixfork Games — Color" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Color</p>
              <div class="flex justify-center gap-3">
                <a href="/images/press-kit/svg/horizontal-color.svg" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">SVG</a>
                <a href="/images/press-kit/png/horizontal/color.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
              </div>
            </div>
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-16 flex items-center justify-center mb-4 bg-white rounded-sm p-3">
                <img src="/images/press-kit/png/horizontal/black.png" alt="Pixfork Games — Black" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Black</p>
              <a href="/images/press-kit/png/horizontal/black.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
            </div>
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-16 flex items-center justify-center mb-4 bg-bg-deep rounded-sm p-3">
                <img src="/images/press-kit/png/horizontal/white.png" alt="Pixfork Games — White" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">White</p>
              <a href="/images/press-kit/png/horizontal/white.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
            </div>
          </div>

          <!-- Vertical -->
          <h3 class="font-mono text-[10px] text-text-muted uppercase tracking-wider mb-4">Vertical</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-24 flex items-center justify-center mb-4 bg-bg-deep rounded-sm p-3">
                <img src="/images/press-kit/png/vertical/color.png" alt="Pixfork Games Vertical — Color" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Color</p>
              <div class="flex justify-center gap-3">
                <a href="/images/press-kit/svg/vertical-color.svg" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">SVG</a>
                <a href="/images/press-kit/png/vertical/color.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
              </div>
            </div>
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-24 flex items-center justify-center mb-4 bg-white rounded-sm p-3">
                <img src="/images/press-kit/png/vertical/black.png" alt="Pixfork Games Vertical — Black" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Black</p>
              <a href="/images/press-kit/png/vertical/black.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
            </div>
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-24 flex items-center justify-center mb-4 bg-bg-deep rounded-sm p-3">
                <img src="/images/press-kit/png/vertical/white.png" alt="Pixfork Games Vertical — White" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">White</p>
              <a href="/images/press-kit/png/vertical/white.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
            </div>
          </div>

          <!-- Symbol -->
          <h3 class="font-mono text-[10px] text-text-muted uppercase tracking-wider mb-4">Symbol</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-20 flex items-center justify-center mb-4 bg-bg-deep rounded-sm p-3">
                <img src="/images/press-kit/png/symbol/color.png" alt="Pixfork Symbol — Color" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Color</p>
              <div class="flex justify-center gap-3">
                <a href="/images/press-kit/svg/symbol-color.svg" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">SVG</a>
                <a href="/images/press-kit/png/symbol/color.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
              </div>
            </div>
            <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
              <div class="h-20 flex items-center justify-center mb-4 bg-white rounded-sm p-3">
                <img src="/images/press-kit/png/symbol/black.png" alt="Pixfork Symbol — Black" class="h-full w-auto object-contain" />
              </div>
              <p class="text-text-muted text-xs mb-2">Black</p>
              <a href="/images/press-kit/png/symbol/black.png" download class="text-accent-primary text-xs hover:text-accent-primary-muted transition-colors">PNG</a>
            </div>
          </div>

          <!-- IMPRESS link -->
          <div class="bg-bg-surface border border-white/5 rounded-sm p-6 text-center">
            <p class="text-text-muted text-sm mb-2">Full press kit with additional assets</p>
            <a
              href="https://impress.games/press-kit/pixfork-games-as"
              target="_blank"
              rel="noopener noreferrer"
              class="text-accent-primary text-sm hover:text-accent-primary-muted transition-colors"
            >
              View on IMPRESS &rarr;
            </a>
          </div>
        </div>

        <!-- Games -->
        <div>
          <h2 class="font-heading text-xs text-text-primary uppercase tracking-wider mb-8">
            Our Games
          </h2>
          <div class="space-y-6">
            {games.map((game) => (
              <div class="bg-bg-surface border border-white/5 rounded-sm p-8">
                <div class="flex flex-col md:flex-row md:items-start gap-6">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-3">
                      <h3 class="font-heading text-[11px] text-text-primary uppercase tracking-wider">
                        {game.title}
                      </h3>
                      {game.status === 'coming-soon' && (
                        <span
                          class="px-2 py-0.5 text-[8px] font-heading uppercase tracking-widest border"
                          style={`border-color: ${game.accentColor}; color: ${game.accentColor};`}
                        >
                          {game.releaseYear}
                        </span>
                      )}
                    </div>
                    <p class="text-text-secondary text-sm leading-relaxed mb-3">{game.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {game.genre.map((g) => (
                        <span class="text-[10px] text-text-muted font-mono">{g}</span>
                      ))}
                    </div>
                  </div>
                  <a
                    href={`/games/${game.slug}`}
                    class="text-xs font-heading uppercase tracking-wider transition-colors whitespace-nowrap"
                    style={`color: ${game.accentColor};`}
                  >
                    View Page &rarr;
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
