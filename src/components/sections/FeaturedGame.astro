---
import { Icon } from 'astro-icon/components';
import Badge from '../ui/Badge.astro';
import SteamButton from '../ui/SteamButton.astro';
---

<section id="featured" class="relative py-24 md:py-32 bg-bg-surface border-y-2 border-white/8">
  <div class="relative z-10 max-w-7xl mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Key art -->
      <a
        href="/games/on-tape-rewind"
        class="relative aspect-video lg:aspect-[4/3] overflow-hidden block border-2 border-white/10 hover:border-game-ontape transition-colors"
        style="box-shadow: 6px 6px 0 var(--color-game-ontape);"
      >
        <img
          src="/images/games/on-tape-rewind/key-art.png"
          alt="On Tape << Rewind â€” Key Art"
          class="absolute inset-0 w-full h-full object-cover"
          loading="lazy"
        />
        <!-- OTR logo overlay -->
        <div class="absolute bottom-4 left-4 right-4">
          <img
            src="/images/games/on-tape-rewind/otr-logo-white.png"
            alt=""
            class="h-8 w-auto opacity-80"
          />
        </div>
      </a>

      <!-- Right: Game info -->
      <div class="space-y-6">
        <!-- Status label -->
        <div class="flex items-center gap-2">
          <span class="font-heading text-sm text-game-ontape uppercase tracking-widest">
            Coming 2027
          </span>
          <span class="inline-block w-2 h-4 bg-game-ontape animate-[blink-cursor_1s_step-end_infinite]" aria-hidden="true"></span>
        </div>

        <!-- Title (hand-drawn logo) -->
        <h2>
          <img
            src="/images/games/on-tape-rewind/otr-logo-white.png"
            alt="On Tape << Rewind"
            class="h-10 md:h-14 w-auto otr-logo-dark"
          />
          <img
            src="/images/games/on-tape-rewind/otr-logo-black.png"
            alt="On Tape << Rewind"
            class="h-10 md:h-14 w-auto otr-logo-light hidden"
          />
        </h2>

        <!-- Description -->
        <p class="text-text-secondary text-lg leading-relaxed">
          A chilling detective story told through cassette tapes. Play back
          recordings, search for clues, discover hidden cassettes, and
          manipulate audio to unravel the disappearance of physicist Fred
          Karlsen during the Cold War.
        </p>
        <p class="text-text-muted text-base italic">
          Something listened back.
        </p>

        <!-- Genre badges -->
        <div class="flex flex-wrap gap-2">
          <Badge color="var(--color-game-ontape)">Psychological Horror</Badge>
          <Badge color="var(--color-game-ontape)">Mystery</Badge>
          <Badge color="var(--color-game-ontape)">Cold War</Badge>
        </div>

        <!-- Platforms -->
        <div class="flex items-center gap-2 text-text-muted text-sm">
          <Icon name="lucide:monitor" class="w-4 h-4" aria-hidden="true" />
          <span>PC / Console</span>
        </div>

        <!-- CTAs -->
        <div class="flex flex-wrap gap-4 pt-2">
          <SteamButton />
          <a
            href="/games/on-tape-rewind"
            class="inline-flex items-center gap-2 px-6 py-3 border-2 border-text-muted text-text-secondary font-heading text-sm uppercase tracking-wider hover:border-game-ontape hover:text-game-ontape transition-all"
          >
            Learn More
            <Icon name="lucide:arrow-right" class="w-4 h-4" aria-hidden="true" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
