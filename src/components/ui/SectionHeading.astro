---
interface Props {
  title: string;
  subtitle?: string;
  as?: 'h1' | 'h2' | 'h3';
  class?: string;
}

const { title, subtitle, as: Tag = 'h2', class: className = '' } = Astro.props;
---

<div class:list={['mb-12 text-center', className]}>
  <Tag
    class="font-heading text-lg md:text-2xl text-text-primary uppercase tracking-wider neon-text-subtle mb-4"
  >
    {title}
  </Tag>
  {subtitle && (
    <p class="text-text-secondary max-w-2xl mx-auto text-lg">{subtitle}</p>
  )}
</div>
