---
interface Props {
  href?: string;
  class?: string;
}

const { href = '#', class: className = '' } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-3 px-6 py-3 bg-steam-dark text-white font-heading text-[10px] uppercase tracking-wider',
    'border-2 border-steam-blue rounded-sm',
    'transition-all duration-300',
    'hover:bg-steam-blue hover:text-steam-dark',
    'shadow-[0_0_10px_rgba(102,192,244,0.2)] hover:shadow-[0_0_25px_rgba(102,192,244,0.4)]',
    className,
  ]}
>
  <!-- Steam icon -->
  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
